# ==========================================
# AI Auto Blog - Environment Variables
# ==========================================
# 이 파일을 복사하여 .env 파일을 만들고 실제 값을 입력하세요
# Copy this file to .env and fill in your actual values

# ==========================================
# Google Gemini API Configuration
# ==========================================
# Google AI Studio에서 API 키 발급: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ==========================================
# Ollama Configuration
# ==========================================
# Ollama 로컬 서버 설정
OLLAMA_HOST=http://localhost:11434
# Ollama 클라우드를 사용하는 경우 (선택사항)
OLLAMA_CLOUD_API_KEY=your_ollama_cloud_api_key_here

# ==========================================
# AWS Configuration
# ==========================================
# AWS 액세스 키 (IAM 사용자 생성 필요)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-northeast-2

# S3 버킷 설정 (블로그 콘텐츠 저장용)
AWS_S3_BUCKET=your-blog-bucket-name

# EC2 인스턴스 정보 (자동화 서버용)
AWS_EC2_INSTANCE_ID=i-xxxxxxxxxxxxxxxxx
AWS_EC2_KEY_NAME=your-key-pair-name

# ==========================================
# Database Configuration (Optional)
# ==========================================
# PostgreSQL or MySQL
DATABASE_URL=postgresql://username:password@localhost:5432/ai_blog_db
# MongoDB
MONGODB_URI=mongodb://localhost:27017/ai_blog

# ==========================================
# Application Settings
# ==========================================
# 앱 환경 설정
NODE_ENV=development
PORT=3000

# 블로그 설정
BLOG_TITLE=AI Auto Blog
BLOG_URL=https://your-blog-domain.com
BLOG_AUTHOR=Your Name

# ==========================================
# Security
# ==========================================
# 세션 시크릿 키 (랜덤 문자열 생성 필요)
SESSION_SECRET=generate_a_random_string_here
# JWT 토큰 시크릿
JWT_SECRET=another_random_string_here

# ==========================================
# External Services (Optional)
# ==========================================
# OpenAI API (ChatGPT)
OPENAI_API_KEY=sk-...

# Claude API (Anthropic)
ANTHROPIC_API_KEY=sk-ant-...

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# ==========================================
# Email Configuration (Optional)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ==========================================
# Cron Job Settings
# ==========================================
# 자동 포스팅 스케줄 (cron 형식)
AUTO_POST_SCHEDULE=0 9,15,21 * * *
# 뉴스 크롤링 스케줄
NEWS_CRAWL_SCHEDULE=0 */6 * * *